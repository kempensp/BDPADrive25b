                  <% } %>
                </div>
                <div class="file-info">
                  <div class="file-name">
                    <% if (file.type === 'file') { %>
                      <a href="/editor/<%= file.node_id %>"><%= file.name %></a>
                    <% } else { %>
                      <%= file.name %>
                    <% } %>
                  </div>
                  <div class="file-meta">
                    Modified: <%= new Date(file.modifiedAt).toLocaleDateString() %>
                  </div>
                </div>
                <div class="file-actions">
                  <button class="btn-icon" onclick="editFile('<%= file.node_id %>')">‚úèÔ∏è</button>
